<%= render "top" %>
<div class ="white_box">
  <br>
  <div class="black_box">
    <p><%=simple_format(@survey.term)%></p>
  </div>
  <br>
  <form action="/survey/profile_process/<%=@survey.id%>" method="post" name="profile">
    <h2><%=@curriculum.title%> 설문 답례품 제공을 위한 인적사항 입력</h2>
    <input type="hidden" name="curriculum" value="<%=@curriculum.id%>">
    <h3>성함</h3>
    <input type="text" name="realname">
    <h3>부서</h3>
    <input type="text" name="department">
    <h3>휴대폰 번호</h3>
    <input type="text" name="phone1" style="width:100px;">-<input type="text" name="phone2" style="width:100px;">-<input type="text"name="phone3" style="width:100px;">
    <br><br>
    <input id="profile_submit" type="submit" value="다음단계로" style="font-size:15px; display:none;">
  </form>
    <button onclick="profilesubmit();">다음단계로</button>

</div>
<script>
function profilesubmit(){
  var realname = document.profile.realname.value;
  var department = document.profile.department.value;
  if (realname == ""){
    alert("이름을 입력해주세요.");
    return false;
  }
  if (department == ""){
    alert("부서를 입력해주세요.");
    return false;
  }
  $('#profile_submit').trigger('click');
}
</script>
